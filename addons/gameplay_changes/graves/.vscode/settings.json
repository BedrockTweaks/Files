{
	"editor.formatOnSave": true,
	"[typescript]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[json]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": true
	},
	"[jsonc]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": true
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	},
	"files.eol": "\n",
	"eslint.format.enable": true,
	"eslint.workingDirectories": [
		"./packs/data/gametests"
	]
}