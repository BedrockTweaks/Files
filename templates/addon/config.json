{
	"$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.4.json",
	"author": "<author name/username>",
	"name": "<pack_name> - <pack_category> - Bedrock Tweaks",
	"packs": {
		"behaviorPack": "./packs/BP",
		"resourcePack": "./packs/RP"
	},
	"regolith": {
		"dataPath": "./packs/data",
		"formatVersion": "1.4.0",
		"filterDefinitions": {
			"gametests": {
				"url": "github.com/Bedrock-OSS/regolith-filters",
				"version": "1.7.4"
			}
		},
		"profiles": {
			"build": {
				"export": {
					"readOnly": true,
					"target": "local",
					"build": "standard"
				},
				"filters": [
					{
						"filter": "gametests",
						"settings": {
							"buildOptions": {
								"bundle": true,
								"entryPoints": [
									"data/gametests/src/main.ts"
								],
								"format": "esm",
								"minify": true,
								"target": "es2020"
							},
							"manifest": "BP/manifest.json",
							"moduleUUID": "<scripting_module_uuid>",
							"modules": [
								/**
								 * Add here any needed native Minecraft modules, available modules are
								 * @minecraft/server
								 * @minecraft/server-ui
								 *
								 * Do not use a beta version, as it can break in future updates
								 *
								 * Use the latest version that corresponds with the Minecraft version you are using as the minimum supported version for your addon
								 *
								 * Make sure to update those versions in the packs/data/gametests/package.json file too
								 *
								 * ! NOTE: Remove this comment during production, or else it will throw an error during Regolith pack building process
								 */
								"@minecraft/server@1.18.0",
								"@minecraft/server-ui@1.3.0"
							],
							"outfile": "BP/scripts/main.js",
							"debugBuild": false
						}
					}
				]
			},
			"default": {
				"export": {
					"readOnly": false,
					"target": "development",
					"build": "standard"
				},
				"filters": [
					{
						"filter": "gametests",
						"settings": {
							"buildOptions": {
								"bundle": true,
								"entryPoints": [
									"data/gametests/src/main.ts"
								],
								"format": "esm",
								"minify": false,
								"target": "es2020"
							},
							"manifest": "BP/manifest.json",
							"moduleUUID": "<scripting_module_uuid>",
							"modules": [
								/**
								 * Add here any needed native Minecraft modules, available modules are
								 * @minecraft/server
								 * @minecraft/server-ui
								 *
								 * Do not use a beta version, as it can break in future updates
								 *
								 * Use the latest version that corresponds with the Minecraft version you are using as the minimum supported version for your addon
								 *
								 * Make sure to update those versions in the packs/data/gametests/package.json file too
								 *
								 * ! NOTE: Remove this comment during production, or else it will throw an error during Regolith pack building process
								 */
								"@minecraft/server@1.18.0",
								"@minecraft/server-ui@1.3.0"
							],
							"outfile": "BP/scripts/main.js",
							"debugBuild": true
						}
					}
				]
			}
		}
	}
}